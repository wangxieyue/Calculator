<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:id="@+id/textview"
                android:singleLine="true"
                android:ellipsize="middle"
                android:hint="0"
                android:textSize="35dp"
                android:gravity="center_vertical|right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/square"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text=" x²" />
            <Button
                android:id="@+id/cube"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="x³" />
            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/sqrt"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="x½" />

            <Button
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:id="@+id/cbrt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="x⅓" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/sin"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="sin" />
            <Button
                android:id="@+id/cos"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="cos" />
            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/tan"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="tan" />

            <Button
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:id="@+id/log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="log" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:id="@+id/seven"
                android:text="7" />

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:id="@+id/eight"
                android:text="8" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:id="@+id/nine"
                android:onClick="onClick"
                android:text="9" />

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/in"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="In" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/four"
                android:onClick="onClick"
                android:text="4" />

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:id="@+id/five"
                android:text="5" />

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/six"
                android:onClick="onClick"
                android:text="6" />

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_margin="2dp"
                android:id="@+id/pai"
                android:textAllCaps="false"
                android:text="π" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="1"
                android:onClick="onClick"
                android:id="@+id/one"/>

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_margin="2dp"
                android:text="2"
                android:id="@+id/two"/>

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_margin="2dp"
                android:id="@+id/three"
                android:text="3" />


            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/eulnum"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="e" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:layout_margin="2dp"
                android:id="@+id/dont"
                android:onClick="onClick"
                android:text="."/>

            <Button
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/zero"
                android:onClick="onClick"
                android:text="0" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:id="@+id/clean"
                android:onClick="onClick"
                android:text="C" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:id="@+id/delete"
                android:onClick="onClick"
                android:text="←" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>